generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model Auction {
  id            String   @id @default(cuid()) @db.VarChar(32)
  name          String
  description   String
  startingPrice Float
  currentPrice  Float
  endDate       DateTime
  sellerId      String   
  bids          Bid[]
}

model Bid {
  id         String   @id @default(cuid()) @db.VarChar(32)
  amount     Float
  placedAt   DateTime
  auctionId  String
  auction    Auction  @relation(fields: [auctionId], references: [id])
  bidderId   String
}
